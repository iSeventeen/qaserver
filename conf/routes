# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# QA Server API
GET     /api/hotwords               controllers.API.getHotWords()


# API documentation using Swagger
GET      /docs/api                            controllers.Assets.at(path="/swagger-ui", file="index.html")
GET      /docs/*file                          controllers.Assets.at(path="/swagger-ui", file)
GET      /api/docs                            controllers.ApiHelpController.getResources
GET      /api/docs/items                      controllers.ApiHelpController.getResource(path = "/api/docs/items")
